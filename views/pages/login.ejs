<html>
  <head>
    <title><%= siteTitle %> - <%= pageTitle %></title>
    <%include ../partials/head %>
    <style>
      * {
        border-radius: 0px !important;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary">
      <span class="navbar-brand" style="color: #fff;"><%= pageTitle %></span>
    </nav>
    <br />
    <p style="color: crimson;"><%= errMessage %></p>
    <br />
    <div class="row" style="margin-left: 50px;margin-right: 50px;">
      <form
        action="http://localhost:3020/band/login"
        method="POST"
        class="col s12"
      >
        <div class="form-group row">
          <label for="email" class="col-2 col-form-label">EmailId</label>
          <div class="col-10">
            <input type="text" name="email" value="" class="form-control" />
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-2 col-form-label">password</label>
          <div class="col-10">
            <input type="text" name="password" value="" class="form-control" />
          </div>
        </div>

        <div class="form-group row">
          <label
            for="click_here"
            class="col-2 col-form-label"
            style="color: #fff;"
            >click here to login</label
          >
          <div class="col-10">
            <input
              type="submit"
              name="login"
              value="login"
              class="btn btn-primary btn-lg"
            />
            <a href="/band/register">click here to register</a>
          </div>
        </div>
      </form>
    </div>
    <% include ../partials/footer %>
  </body>
</html>
